<script>
	$(function () {
		$('input[type=range]').change(getTotal);
		getTotal();
	});

	function getTotal() {
		var first = parseInt(slider1.value) || 0;
		var second = parseInt(slider2.value) || 0;
		var third = parseInt(slider3.value) || 0;
		var four = parseInt(slider4.value) || 0;
		var five = parseInt(slider5.value) || 0;
		var six = parseInt(slider6.value) || 0;
		document.getElementById('total').innerHTML = first + second + third + four + five + six;
	}
</script>

<script>
