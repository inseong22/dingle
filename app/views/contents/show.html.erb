			</div>
			</div>
<%else%>
			<%nil%>
<%end%>
			<!--range bar-->
<%if @content.at3.present? %>
			<div style="position:relative; height:20%;">
							<div class="input" style="margin:0; width:40%; position:absolute; bottom:0%; left:7%; font-size:15px; acumin-pro, sans-serif; font-weight:normal;">
				<%=@content.at3%>
			</div>
			<div style="margin:0; width:40%; position:absolute; bottom:0%; right:3%; font-size:15px; acumin-pro, sans-serif; font-weight:normal;">
				$<%=@content.ac3%>
			</div>
			</div>
<%else%>
			<%nil%>
<%end%>
			<!--range bar-->
		</div>
	</div>
	<!--add-->
<%else%>
			<%nil%>
<%end%>
<!--dotted line-->
<div>
	<svg x="0px" y="0px" width="70%" height="10" viewBox="0 0 395.9 1">
