<div class="memo" style="font-family: acumin-pro, sans-serif; font-weight:bold;">
	<p>
		memo
	</p>
	<div class="message">
		<label for="message"></label>
		<textarea
			style="border: none; font-family: acumin-pro, sans-serif; "
			name="memo"
			placeholder="Write your day"
			id="message_input"
			cols="30"
			rows="5"
			required
		>
<%=@content.memo%></textarea
		>
	</div>
</div>
<div>
	<img
		style="float: left; width: 100px; margin-left: 10%;"
		src="/assets/barcode-205f91ec4a098ebde99ad725ccfdb3d24fe8be7f449d09b6baa515bc4fc5513a.jpg"
	/>
</div>
<div class="totalvalue">
	Total : $<%= @content.content1 + @content.content2 + @content.content3 + @content.ac1 +
	@content.ac2 + @content.ac3 %>
</div>

<div class="box">
		<%=	button_to 'EDIT', edit_content_path(@content), :method => :get, style: "float: left; margin-left: 30%;" %>
