	<input type="string" value="Today's mood" name="title1" style="display: none;" />
</div>

<!--range bar-->
<div id="slidecontainer1">
	<input
		type="range"
		name="content1"
		min="0"
		max="100"
		value="<%=@content.content1%>"
		class="slider1"
		id="myRange1"
	/>
	<p class="slid" style="font-family: acumin-pro, sans-serif; font-weight:bold;">$<%=@content.content1%></p>
</div>
<!--range bar-->

<div class="contents2" style="font-family: acumin-pro, sans-serif; font-weight:bold;">
	Today's weather
	<input type="string" value="Today's weather" name="title2" style="display: none;" />
</div>

<div id="slidecontainer2">
	<input
		type="range"
		name="content2"
		min="0"
		max="100"
		value="<%=@content.content2%>"
		class="slider2"
		id="myRange2"
	/>
	<p class="slid" style="font-family: acumin-pro, sans-serif; font-weight:bold;">$<%=@content.content2%></p>
</div>
<!--range bar-->

<div class="contents3" style="font-family: acumin-pro, sans-serif; font-weight:bold;">
