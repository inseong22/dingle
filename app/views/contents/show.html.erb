<!--receipe-->

<%if @content.at1.present? || @content.at2.present? || @content.at3.present?%>
<!--dotted line-->
<div>
	<svg x="0px" y="0px" width="70%" height="10" viewBox="0 0 395.9 1">
		<line class="line1" x1="0" y1="0.5" x2="395.9" y2="0.5" />
	</svg>
</div>
	<!--dotted line-->
	<div id="dis" style="margin-top:0;">
		<div id="container" style="position:relative; height:200px; border:none; margin-top:0;  margin-bottom:0;">
